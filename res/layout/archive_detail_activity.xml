<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/archive_detail_activity_title_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="serif" />

        <TextView
            android:id="@+id/archive_detail_activity_date_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/archive_detail_activity_title_txv"
            android:layout_below="@+id/archive_detail_activity_title_txv"
            android:layout_marginStart="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/light_gray"
            android:typeface="serif" />

        <TextView
            android:id="@+id/archive_detail_activity_publisher_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/archive_detail_activity_date_txv"
            android:layout_below="@+id/archive_detail_activity_title_txv"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/archive_detail_activity_date_txv"
            android:paddingBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/light_gray"
            android:typeface="serif" />

        <WebView
            android:id="@+id/archive_detail_activity_content_webv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/archive_detail_activity_date_txv"
            android:layout_centerHorizontal="true"
            android:scrollbars="none"
            android:fitsSystemWindows="true" />
    </RelativeLayout>


    <!--<TextView-->
    <!--android:id="@+id/archive_detail_activity_content_txv"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/archive_detail_activity_date_txv"-->
    <!--android:layout_centerHorizontal="true" />-->

</ScrollView>
