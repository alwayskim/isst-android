<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/job_list_item_title_txv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:typeface="serif"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/job_list_item_date_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job_list_item_title_txv"
        android:typeface="serif"
        android:textColor="@color/gray"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/job_list_item_publisher_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/job_list_item_date_txv"
        android:layout_alignParentRight="true"
        android:typeface="serif"
        android:textColor="@color/gray"
        android:paddingRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/job_list_item_description_txv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job_list_item_date_txv"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <!--<View-->
        <!--android:id="@+id/job_list_item_indicator_view"-->
        <!--android:layout_width="5dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:background="#66ccff" />-->

</RelativeLayout>
