<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/restaurant_detail_activity_dial_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/restaurant_imagebutton_call"
        android:src="@android:drawable/ic_menu_call" />

    <TextView
        android:id="@+id/menu_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_detail_activity_final_business_hours_txv"
        android:gravity="center"
        android:padding="20dp"
        android:text="菜单"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/restaurant_detail_activity_menu_lsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/menu_tip"
        android:layout_centerHorizontal="true">

    </ListView>

    <TextView
        android:id="@+id/restaurant_detail_activity_hotline_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurant_detail_activity_dial_ibtn"
        android:layout_toRightOf="@+id/restaurant_detail_activity_final_hotline_txv"
        android:padding="11dp" />

    <TextView
        android:id="@+id/restaurant_detail_activity_final_hotline_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurant_detail_activity_dial_ibtn"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:text="@string/restaurant_hotline" />

    <TextView
        android:id="@+id/restaurant_detail_activity_final_description_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/restaurant_detail_activity_final_hotline_txv"
        android:padding="10dp"
        android:text="@string/restaurant_description" />

    <TextView
        android:id="@+id/restaurant_detail_activity_description_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurant_detail_activity_final_description_txv"
        android:layout_below="@+id/restaurant_detail_activity_hotline_txv"
        android:layout_toRightOf="@+id/restaurant_detail_activity_final_description_txv"
        android:padding="10dp" />

    <TextView
        android:id="@+id/restaurant_detail_activity_final_address_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_detail_activity_final_description_txv"
        android:padding="10dp"
        android:text="@string/restaurant_address" />

    <TextView
        android:id="@+id/restaurant_detail_activity_address_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurant_detail_activity_final_address_txv"
        android:layout_below="@+id/restaurant_detail_activity_description_txv"
        android:layout_toRightOf="@+id/restaurant_detail_activity_final_address_txv"
        android:padding="10dp" />

    <TextView
        android:id="@+id/restaurant_detail_activity_final_business_hours_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_detail_activity_final_address_txv"
        android:padding="10dp"
        android:text="@string/restaurant_business_hours" />

    <TextView
        android:id="@+id/restaurant_detail_activity_business_hours_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurant_detail_activity_final_business_hours_txv"
        android:layout_below="@+id/restaurant_detail_activity_address_txv"
        android:layout_toRightOf="@+id/restaurant_detail_activity_final_business_hours_txv"
        android:padding="10dp" />

</RelativeLayout>
