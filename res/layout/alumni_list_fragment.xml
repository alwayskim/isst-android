<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/alumni_filter_conditon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_filter_conditon"
        android:paddingRight="20dp"/>
    <TextView
        android:id="@+id/alumni_filter_conditon_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/alumni_filter_conditon"
        android:text="筛选内容" />
    <ListView
        android:id="@+id/alumni_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alumni_filter_conditon" >
    </ListView>

</RelativeLayout>
