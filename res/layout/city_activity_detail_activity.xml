<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/city_event_detail_picture_imgv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/default_city" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/city_event_detail_duration_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/text_size_tiny"
            android:typeface="serif" />

        <TextView
            android:id="@+id/city_event_detail_location_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_event_detail_duration_txv"
            android:textSize="@dimen/text_size_tiny"
            android:typeface="serif" />
    </RelativeLayout>


    <WebView
        android:id="@+id/city_event_detail_content_webv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/city_event_show_participants_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_big"
            android:background="@color/blue_button"
            android:padding="10dp"
            android:text="@string/participate_show_list"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/city_event_detail_participate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_big"
            android:background="@color/red_button"
            android:padding="10dp"
            android:text="@string/participate_event"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>