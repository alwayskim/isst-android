<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/restaurant_menu_item_dish_icon"
        android:padding="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@color/light_gray"/>

    <TextView
        android:id="@+id/restaurant_menu_item_name_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/restaurant_menu_item_dish_icon"
        android:layout_toLeftOf="@+id/restaurant_menu_item_divider"
        android:typeface="serif" />
    <TextView
        android:id="@+id/restaurant_menu_item_price_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_toRightOf="@+id/restaurant_menu_item_divider"
        android:layout_marginLeft="80dp"
        android:paddingTop="10dp"
        android:typeface="serif"
        android:textColor="@color/light_gray" />

    <View
        android:id="@+id/restaurant_menu_item_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
