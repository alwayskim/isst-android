<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/filter_show_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/filter_show_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Text"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/filter_show_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/halfTransparent"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:text="搜索" />

    </LinearLayout>

    <ImageView
        android:id="@+id/filter_show_area_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/filter_show_area"
        android:background="#ebebeb" />

    <include
        layout="@layout/simple_swipe_refresh_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_show_area_line" />

</RelativeLayout>
