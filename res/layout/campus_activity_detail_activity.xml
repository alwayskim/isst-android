<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/campus_activity_detail_activity_picture_imgv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/campus_activity_imageview_picture"
        android:scaleType="fitXY"
        android:src="@drawable/default_campus" />

    <TextView
        android:id="@+id/campus_activity_detail_activity_duration_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/campus_activity_detail_activity_picture_imgv"
        android:textSize="@dimen/text_size_tiny"
        android:typeface="serif" />

    <TextView
        android:id="@+id/campus_activity_detail_activity_loaction_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/campus_activity_detail_activity_duration_txv"
        android:textSize="@dimen/text_size_tiny"
        android:typeface="serif" />

    <WebView
        android:id="@+id/campus_activity_detail_activity_content_webv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/campus_activity_detail_activity_loaction_txv"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
