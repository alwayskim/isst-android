<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/campusMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray"
                android:gravity="left|center_vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/padding_middle"
                android:paddingTop="3dp"
                android:text="在校信息"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:typeface="serif" />

            <LinearLayout
                android:id="@+id/contact_detail_activity_name_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/campusMessage"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/contact_detail_activity_name_note_txv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_big"
                        android:text="姓名"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/contact_detail_activity_name_txv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/contact_detail_activity_name_note_txv"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:typeface="serif" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/contact_detail_activity_number_area"
                    android:layout_marginLeft="@dimen/padding_big"
                    android:background="?android:attr/dividerHorizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/contact_detail_activity_gender_note_txv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_big"
                        android:text="性别"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/contact_detail_activity_gender_txv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/contact_detail_activity_gender_note_txv"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/contact_detail_activity_number_area"
                    android:layout_marginLeft="@dimen/padding_big"
                    android:background="?android:attr/dividerHorizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/contact_detail_activity_grade_note_txv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_big"
                        android:text="年级"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/contact_detail_activity_grade_txv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/contact_detail_activity_grade_note_txv"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/contact_detail_activity_number_area"
                    android:layout_marginLeft="@dimen/padding_big"
                    android:background="?android:attr/dividerHorizontal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/contact_detail_activity_major_note_txv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_big"
                        android:text="年级"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/contact_detail_activity_major_txv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/contact_detail_activity_major_note_txv"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/contactMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_detail_activity_name_area"
                android:background="@color/light_gray"
                android:gravity="left|center_vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/padding_middle"
                android:paddingTop="3dp"
                android:text="联系方式"
                android:textColor="@color/black"
                android:typeface="serif" />

            <RelativeLayout
                android:id="@+id/contact_detail_activity_number_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contactMessage"
                android:background="@color/white"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/contact_detail_activity_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/padding_big"
                    android:text="@string/contact_detail_mobile"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/contact_detail_activity_mobile_txv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/contact_detail_activity_mobile_ibtn"
                    android:layout_toRightOf="@id/contact_detail_activity_mobile"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:typeface="serif" />

                <ImageButton
                    android:id="@+id/contact_detail_activity_mobile_ibtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padding_middle"
                    android:layout_toLeftOf="@+id/contact_detail_activity_message_ibtn"
                    android:background="@drawable/button_selector"
                    android:contentDescription="@string/contact_detail_imagebutton_call"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_menu_call" />

                <ImageButton
                    android:id="@+id/contact_detail_activity_message_ibtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_selector"
                    android:contentDescription="@string/contact_detail_imagebutton_message"
                    android:scaleType="center"
                    android:src="@android:drawable/sym_action_chat" />
            </RelativeLayout>

            <View
                android:id="@+id/contact_detail_activity_dividerOne"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/contact_detail_activity_number_area"
                android:layout_marginLeft="@dimen/padding_big"
                android:background="?android:attr/dividerHorizontal" />

            <RelativeLayout
                android:id="@+id/contact_detail_activity_email_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_detail_activity_dividerOne"
                android:background="@color/white"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/contact_detail_activity_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/padding_big"
                    android:text="@string/contact_detail_email"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/contact_detail_activity_email_txv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/contact_detail_activity_email_ibtn"
                    android:layout_toRightOf="@id/contact_detail_activity_email"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:typeface="serif" />

                <ImageButton
                    android:id="@+id/contact_detail_activity_email_ibtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_selector"
                    android:contentDescription="@string/contact_detail_imagebutton_email"
                    android:scaleType="center"
                    android:src="@android:drawable/sym_action_email" />
            </RelativeLayout>

            <TextView
                android:id="@+id/jobTitleMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_detail_activity_email_area"
                android:background="@color/light_gray"
                android:gravity="left|center_vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/padding_middle"
                android:paddingTop="3dp"
                android:text="职场信息"
                android:textColor="@color/black"
                android:typeface="serif" />

            <RelativeLayout
                android:id="@+id/contact_detail_activity_city_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jobTitleMessage"
                android:background="@color/white"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/contact_detail_activity_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/padding_big"
                    android:text="@string/contact_detail_city"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/contact_detail_activity_city_txv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/contact_detail_activity_city"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:typeface="serif" />
            </RelativeLayout>

            <View
                android:id="@+id/contact_detail_activity_dividerThree"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/contact_detail_activity_city_area"
                android:layout_marginLeft="@dimen/padding_big"
                android:background="?android:attr/dividerHorizontal" />

            <RelativeLayout
                android:id="@+id/contact_detail_activity_company_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_detail_activity_dividerThree"
                android:background="@color/white"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/contact_detail_activity_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/padding_big"
                    android:text="@string/contact_detail_company"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/contact_detail_activity_company_txv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/contact_detail_activity_company"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:typeface="serif" />
            </RelativeLayout>

            <View
                android:id="@+id/contact_detail_activity_dividerFour"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/contact_detail_activity_company_area"
                android:layout_marginLeft="@dimen/padding_big"
                android:background="?android:attr/dividerHorizontal" />

            <RelativeLayout
                android:id="@+id/contact_detail_activity_position_area"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_below="@id/contact_detail_activity_dividerFour"
                android:background="@color/white"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/contact_detail_activity_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/padding_big"
                    android:text="@string/contact_detail_position"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/contact_detail_activity_position_txv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/contact_detail_activity_position"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:typeface="serif" />
            </RelativeLayout>

            <View
                android:id="@+id/contact_detail_activity_dividerFive"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/contact_detail_activity_position_area"
                android:layout_marginLeft="@dimen/padding_big"
                android:background="?android:attr/dividerHorizontal" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
